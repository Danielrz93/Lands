                <!-- Apilados todo hacia abajo -->
                <Label
                    Text="E-Mail">
                </Label>
                <Entry
                    Keyboard="Email"
                    Text="{Binding Email, Mode=TwoWay}"
                    Placeholder="Enter your Email...">
                </Entry>
                <Label
                    Text="Password">
                </Label>
                <Entry
                    IsPassword="True"
                    Text="{Binding Psswd, Mode=TwoWay}"
                    Placeholder="Enter your Password.....">
                </Entry>
                <StackLayout
                     Orientation="Horizontal">
                    <Label
                        Text="Remeber me in this device"
                        VerticalOptions="Center"
                        HorizontalOptions="StartAndExpand">
                    </Label>
                    <Switch
                        IsToggled="{Binding IsRemembered, Mode=TwoWay}"
                        HorizontalOptions="End">
                    </Switch>
                </StackLayout>
                <StackLayout                   
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand">
                    <Button
                        BackgroundColor="Navy"
                        BorderRadius="15"
                        Command="{Binding LoginCommand}"
                        TextColor="White"
                        Text="Login">
                    </Button>
                    <Button
                        BackgroundColor="Purple"
                        BorderRadius="15"  
                        TextColor="White"
                        Text="Register">
                    </Button>
                </StackLayout>
                <ActivityIndicator
                    IsRunning="{Binding IsRunning, Mode=TwoWay}"
                    VerticalOptions="CenterAndExpand">
                </ActivityIndicator>
                <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="Center">
                    <Image 
                        Source="facebook_logo.png"
                        WidthRequest="60">
                    </Image>
                    <Image
                        Source="twitter_logo.png"
                        WidthRequest="40">
                    </Image>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>